{
  "name": "@nokken65/react-hooks",
  "version": "0.0.1",
  "description": "Custom react hooks",
  "type": "module",
  "main": "./lib/index.cjs.js",
  "types": "./lib/index.d.ts",
  "module": "./lib/index.es.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "require": "./lib/index.cjs.js",
      "import": "./lib/index.es.js",
      "default": "./lib/index.es.js",
      "types": "./lib/index.d.ts"
    }
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nokken65/react-hooks.git"
  },
  "author": {
    "name": "Denis Ermolin"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nokken65/react-hooks/issues"
  },
  "homepage": "https://github.com/nokken65/react-hooks#readme",
  "keywords": [
    "react",
    "hooks"
  ],
  "scripts": {
    "build": "vite build",
    "format:write": "prettier --write \"**/*.{ts,js,cjs,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{ts,js,cjs,md,mdx}\"",
    "lint:check": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "test:unit": "vitest",
    "test:unit:watch": "vitest --watch",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@nokken65/prettier-config": "^1.0.1",
    "@nokken65/ts-config": "^1.0.2",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@types/node": "20.11.3",
    "@types/react": "18.2.43",
    "@types/react-dom": "18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^10.3.10",
    "jsdom": "^23.2.0",
    "prettier": "3.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.2.2",
    "vite": "^5.0.12",
    "vite-plugin-dts": "^3.7.1",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "engines": {
    "node": "20"
  }
}
